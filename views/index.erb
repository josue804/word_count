<h1>Let's count some words!</h1>
<form action="/word_count">
  <div class="form-group">
    <label for="word_to_count">Word to count</label>
    <input name="word_to_count" id="word_to_count" type="text">
  </div>
  <div class="form-group">
    <label for="words_to_match_to">Words to match to</label>
    <input name="words_to_match_to" id="words_to_match_to" type="text">
  </div>
  <button class="btn-success" type="submit">Count Away!</button>
</form>
